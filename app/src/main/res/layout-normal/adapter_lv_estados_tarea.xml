<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginBottom="10dp"
    android:clickable="true"
    android:background="@color/description"
    >

    <View
        android:id="@+id/indicador_estado_tarea"
        android:layout_width="88dp"
        android:layout_height="93dp"
        android:layout_below="@+id/tv_habitacion_estado_tarea"
        android:layout_marginEnd="133dp"
        android:layout_marginRight="133dp"
        android:layout_toLeftOf="@+id/vertical_separator_estado"
        android:layout_toStartOf="@+id/vertical_separator_estado"
        android:background="@color/rojo" />

    <View
        android:id="@+id/indicador_estado_tarea2"
        android:layout_width="88dp"
        android:layout_height="93dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:background="@color/blanco" />

    <RelativeLayout
        android:id="@+id/rl_estados_tarea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">


        <View
            android:id="@+id/vertical_separator_estado"
            android:layout_width="1dp"
            android:layout_height="match_parent"

            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/tv_habitacion_estado_tarea"
            android:layout_toRightOf="@+id/tv_habitacion_estado_tarea"
            android:background="#E0E0E0" />

        <TextView
            android:id="@+id/tv_habitacion_estado_tarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="82dp"
            android:layout_marginStart="82dp"
            android:text="TextView"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_estados_carro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/vertical_separator_estado"
            android:layout_toRightOf="@+id/vertical_separator_estado"
            android:textSize="30sp" />

        <ProgressBar
            android:id="@+id/pb_prioridad"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView4"
            android:layout_toEndOf="@+id/vertical_separator_estado"
            android:layout_toRightOf="@+id/vertical_separator_estado" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_tipo_habi"
            android:layout_toEndOf="@+id/tv_estados_carro"
            android:layout_toRightOf="@+id/tv_estados_carro"
            android:text="Prioridad:"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_estado_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_habitacion_estado_tarea"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="15/03"
            android:textAlignment="textEnd"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_estado_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="10:00"
            android:textAlignment="textEnd"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_tipo_habi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_habitacion_estado_tarea"
            android:layout_alignStart="@+id/tv_habitacion_estado_tarea"
            android:layout_below="@+id/tv_habitacion_estado_tarea"
            android:layout_toLeftOf="@+id/textView4"
            android:layout_toStartOf="@+id/textView4"
            android:textAlignment="center"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_nombre_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_estados_carro"
            android:layout_toEndOf="@+id/vertical_separator_estado"
            android:layout_toRightOf="@+id/vertical_separator_estado"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_ocupacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_nombre_cliente"
            android:layout_alignLeft="@+id/tv_habitacion_estado_tarea"
            android:layout_alignStart="@+id/tv_habitacion_estado_tarea"
            android:layout_toLeftOf="@+id/tv_estados_carro"
            android:layout_toStartOf="@+id/tv_estados_carro"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/iv_nota_audio"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignBottom="@+id/tv_tipo_habi"
            android:layout_alignLeft="@+id/tv_estado_hora"
            android:layout_alignStart="@+id/tv_estado_hora"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            app:srcCompat="@android:drawable/ic_btn_speak_now" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
